/* pages/profile/profile.wxss */
.avatar{
  background-color:#ff6600;
  height:400rpx;
  display: flex;/*使用弹性布局*/
  justify-content: center;/*水平居中*/
  align-items: center;/*垂直居中*/
}
.avatar image{
  width: 190rpx;
  height:190rpx;
  border-radius: 50%;/*圆形图片*/
  border:3px solid rgba(0,0,0,0.3);
}

/*项目条目*/
.cell{
  background-color: #fff;
  font-size: 16px;
}
.cell-item{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #ddd;
}