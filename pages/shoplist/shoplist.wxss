/*9：打分*/
.shop-star{
  position:absolute;
  right: 20rpx;
  top:20rpx;
}
.star-after{
  color:#e2e2e2;
}
.star-before{
  color:#f19e38;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}

