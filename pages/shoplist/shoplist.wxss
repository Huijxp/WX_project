/* pages/shoplist/shoplist.wxss */
/*1：组件的白色背景*/
page{
  background-color: #fff;
}
/*2：当前商品的条目*/
.shop{
  padding:20rpx;
  border-bottom:1rpx solid #ddd;
  display: flex;
  /*定位打分组件 父元素相对定位 子元素绝对定位*/
  position:relative;
}
/*3：当前商品的图片*/
.shop-img{
  width:160rpx;
  height:158rpx;
  margin-right: 20rpx;
}
/*4：商品信息*/
.shop-info{
  width: 520rpx;
  color:#666;
  font-size: 13px;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
}
/*5：店铺名称*/
.shop-title{
  font-size:16px;
  color:#333;
  width: 380rpx;
}
