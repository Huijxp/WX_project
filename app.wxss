/**app.wxss**/
/*全局分隔块*/
.divider{
  height: 20rpx;
  background: #f1f1f1;
}
/*10：店铺名称 截取 超出部分显示........*/
.ell{
  overflow: hidden;/*超出范围隐藏*/
  white-space: nowrap;/*不允许换行*/
  text-overflow: ellipsis;/*超出范围部分添加....*/
}
/*通用功能三*/
/*通用的箭头*/
.arrow{
  display: flex;
  justify-content: space-between;/*两端对齐*/
  align-items: center;/*垂直居中*/
}
/*伪类添加样式*/
.arrow::after{
  content:"";
  width: 15rpx;
  height: 15rpx;
  border-top: 1px solid #ccc;/*箭头矩形 top*/
  border-right: 1px solid #ccc;/*箭头边框right*/
  transform: rotate(45deg);/*旋转45度*/
}